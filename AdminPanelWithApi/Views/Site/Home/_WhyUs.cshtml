@using Domain.ViewModels;
@model List<WhyUsViewModel>
@{
    Layout = null;
}


<div class="container-fluid">

    <div class="row gy-4">

        <div class="col-lg-7 d-flex flex-column justify-content-center order-2 order-lg-1">

            <div class="content px-xl-5" data-aos="fade-up" data-aos-delay="100">
                <h3><span>Why Choose Us?</span><strong> At Our Company</strong></h3>
                <p>
                    we believe that success comes from a combination of expertise, innovation, and dedication to our clients. Our team of professionals is committed to providing exceptional service tailored to your specific needs. We leverage cutting-edge technology and industry best practices to deliver solutions that not only meet but exceed your expectations.
                </p>
            </div>
            <div class="faq-container px-xl-5" data-aos="fade-up" data-aos-delay="200">

                @if (Model != null)
                {
                    int counter = 1;
                    @foreach (var item in Model)
                    {

                        <div class="faq-item">
                            <h3><span>0</span><span>@counter</span> @item.Question</h3>
                            <div class="faq-content">
                                <p>@item.Answer</p>
                            </div>
                            <i class="faq-toggle bi bi-chevron-right"></i>

                        </div>

                        counter++;
                        <!-- End Faq item-->
                    }

                }
            </div>

        </div>
        <div class="col-lg-5 order-1 order-lg-2 why-us-img">
            <img src="assets/img/why-us.png" class="img-fluid" alt="" data-aos="zoom-in" data-aos-delay="100">
        </div>
    </div>
</div>
<!-- /Why Us Section -->