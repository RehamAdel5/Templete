<!-- About Section -->
<section id="about" class="about section">

    <!-- Section Title -->
    <div class="container section-title" data-aos="fade-up">
        <h2>About Us</h2>
    </div><!-- End Section Title -->

    <div class="container">

        <div class="row gy-4">

            <div class="col-lg-6 content" data-aos="fade-up" data-aos-delay="100">
                <p>
                    We are a greate team who made best of recent technologies and these are some of our great proofs
                </p>
                <ul>
                    @if (Model != null)
                    {
                        @foreach (var item in Model)
                        {
                            <li>
                                <i class="bi bi-check2-circle"></i>
                                <span>@item.Details</span>
                            </li>

                            <!-- End details for about us Item -->
                        }
                    }
                    else
                    {
                        <li>No AboutUs available.</li>
                    }
                </ul>
            </div>

            <div class="col-lg-6" data-aos="fade-up" data-aos-delay="200">
                @if (Model != null)
                {
                    int counter = 0;
                    @foreach (var item in Model)
                    {
                        if (counter == 0)
                        {
                            <p class="short-text">@item.Description</p> <!-- First Description -->
                        }
                        else
                        {
                            <p class="long-text" style="display: none;">@item.Description</p> <!-- Other Descriptions -->
                        }
                        counter++;

                        <!-- End description for about us Item -->
                    }
                }

                <a href="#" class="read-more" id="readMoreBtn"><span>Read More</span><i class="bi bi-arrow-right"></i></a>
            </div>

        </div>

    </div>

</section><!-- /About Section -->
