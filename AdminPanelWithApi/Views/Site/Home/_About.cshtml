@using Domain.ViewModels;
@model List<AboutViewModel>
@{
    Layout = null;
}
<script>

    $(document).ready(function()
    {
        $("#readMoreBtn").click(function(e) {
            e.preventDefault();
            $(".long-text").slideToggle(); // Toggles the visibility of the extra content
            var btnText = $(this).find("span").text() === "Read More" ? "Read Less" : "Read More";
            $(this).find("span").text(btnText);

            // Toggle the icon class
            var $icon = $(this).find("i");
            if ($icon.hasClass("bi-arrow-right")) {
                $icon.removeClass("bi-arrow-right").addClass("bi-arrow-left"); 
            }
             else {
                 $icon.removeClass("bi-arrow-left").addClass("bi-arrow-right");
            }
        });
    });
</script>
