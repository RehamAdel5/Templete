@model Domain.Entities.Tag

<div class="row custom-form-container">
    <div class="col-12">
        <div class="content-header">تعديل بيانات Tag</div>
    </div>
</div>

<section id="basic-hidden-label-form-layouts">
    <div class="row match-height custom-form-container">
        <div class="col-12">
            <div class="card">
                <div class="card-content">
                    <div class="card-body">
                        <form asp-action="Edit" enctype="multipart/form-data">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="form-group">
                                <label asp-for="NameEn" class="control-label"></label>
                                <input asp-for="NameEn" class="form-control" />
                                <span asp-validation-for="NameEn" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="NameAr" class="control-label"></label>
                                <input asp-for="NameAr" class="form-control" />
                                <span asp-validation-for="NameAr" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="PropertyEn" class="control-label"></label>
                                <input asp-for="PropertyEn" class="form-control" />
                                <span asp-validation-for="PropertyEn" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="PropertyAr" class="control-label"></label>
                                <input asp-for="PropertyAr" class="form-control" />
                                <span asp-validation-for="PropertyAr" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="ContentEn" class="control-label"></label>
                                <input asp-for="ContentEn" class="form-control" />
                                <span asp-validation-for="ContentEn" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="ContentAr" class="control-label"></label>
                                <input asp-for="ContentAr" class="form-control" />
                                <span asp-validation-for="ContentAr" class="text-danger"></span>
                            </div>
                            <input type="hidden" asp-for="Id" />

                            <div class="form-group">
                                <input type="submit" value="حفظ" class="btn btn-primary" />
                                <a asp-action="Index" class="btn btn-secondary"><i class="ft-x mr-1"></i>الرجوع</a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        function readURL(input, target) {
            if (input.files && input.files[0]) {
                var reader = new FileReader();

                reader.onload = function (e) {
                    $(`#${target}`).attr('src', e.target.result).width(150).height(200);
                };

                reader.readAsDataURL(input.files[0]);
            }
        }
    </script>
}

