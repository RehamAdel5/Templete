@model IEnumerable<Domain.Entities.Configuration>

<div class="row">
    <div class="col-12">
        <div class="content-header">
            Configurations
        </div>
    </div>
</div>
<section id="configuration">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h4 class="card-title"><a asp-action="Create"><i class="fa fa-plus" aria-hidden="true"></i>&nbsp;اضافة جديد</a></h4>
                </div>
                <div class="card-content">
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-striped table-bordered zero-configuration dataTable">
                                <thead>
                                    <tr>
                                        <th>
                                            @Html.DisplayNameFor(model => model.Key)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.Value)
                                        </th>
                                        <th>التعديل</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Key)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Value)
                                            </td>

                                            <td>
                                                <div class="btn-group w-100 d-flex justify-content-center align-items-center" style="min-height:5rem;" role="group" aria-label="Basic example">
                                                    <a asp-action="Edit" asp-route-id="@item.Id"><i class="fa fa-pencil-square-o fa-lg" aria-hidden="true"></i></a>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

