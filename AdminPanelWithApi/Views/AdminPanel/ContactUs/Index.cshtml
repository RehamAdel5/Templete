@model IEnumerable<Domain.Entities.ContactUs>

<div class="row">
    <div class="col-12">
        <div class="content-header">
            اتصل بنا
        </div>
    </div>
</div>
<section id="configuration">
    <div class="row">
        <div class="col-12">
            <div class="card">               
                <div class="card-content">
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-striped table-bordered zero-configuration dataTable">
                                <thead>
                                    <tr>
                                        <th>
                                            الاسم
                                        </th>
                                        <th>
                                            البريد الابكترونى
                                        </th>
                                        <th>
                                            الهاتف
                                        </th>
                                        <th>
                                            الموضوع
                                        </th>
                                        <th>
                                            الرسالة
                                        </th>
                                        
                                        <th>العمليات</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Name)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Email)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Phone)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Subject)
                                            </td>
                                            <td class="w-100">
                                                @Html.DisplayFor(modelItem => item.Message)
                                            </td>                                            
                                            <td>
                                                <div class="btn-group w-100 d-flex justify-content-center align-items-center" style="min-height:5rem;" role="group" aria-label="Basic example">
                                                    <a asp-action="Details" asp-route-id="@item.Id"><i class="fa fa-eye fa-lg" aria-hidden="true"></i></a>
                                                    <a asp-action="Delete" asp-route-id="@item.Id"><i class="fa fa-trash-o fa-lg" aria-hidden="true"></i></a>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
