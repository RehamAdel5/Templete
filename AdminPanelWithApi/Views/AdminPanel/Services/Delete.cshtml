@model Domain.Entities.Service
<div class="row custom-form-container">
    <div class="col-12">
        <div class="content-header">هل انت متأكد من الحذف؟</div>
    </div>
</div>

<section>
    <div class="row match-height custom-form-container">
        <div class="col-12">
            <div class="card">
                <div class="card-content">
                    <div class="card-body">
                        <dl class="row">
                            <dt class="col-sm-2">
                                عنوان عربي
                            </dt>
                            <dd class="col-sm-10">
                                @Html.DisplayFor(model => model.TitleAr)
                            </dd>
                            <dt class="col-sm-2">
                                عنوان انجليزى
                            </dt>
                            <dd class="col-sm-10">
                                @Html.DisplayFor(model => model.TitleEn)
                            </dd>                            
                            <dt class="col-sm-2">
                                وصف قصير عربي
                            </dt>
                            <dd class="col-sm-10">
                                @Html.DisplayFor(model => model.ShortDescAr)
                            </dd>
                            <dt class="col-sm-2">
                                وصف قصير انجليزى
                            </dt>
                            <dd class="col-sm-10">
                                @Html.DisplayFor(model => model.ShortDescEn)
                            </dd>
                            <dt class="col-sm-2">
                                وصف طويل عربي
                            </dt>
                            <dd class="col-sm-10">
                                @Html.DisplayFor(model => model.LongDescAr)
                            </dd>
                            <dt class="col-sm-2">
                                وصف طويل انجليزى
                            </dt>
                            <dd class="col-sm-10">
                                @Html.DisplayFor(model => model.LongDescEn)
                            </dd>
                            <dt class="col-sm-2">
                                الصورة
                            </dt>
                            <dd class="col-sm-10">
                                @if (!string.IsNullOrEmpty(Model.Image))
                                {
                                    <img asp-append-version class="mt-2 img-fluid w-50" src="~/images/@Model.Image" alt="@Model.TitleEn" />
                                }
                            </dd>
                            <dt class="col-sm-2">
                                عرض البداية
                            </dt>
                            <dd class="col-sm-10">
                                @Html.DisplayFor(model => model.ShowHome)
                            </dd>
                        </dl>

                        <form asp-action="Delete">
                            <input type="hidden" asp-for="Id" />
                            <div class="form-group mt-4">
                                <button type="submit" class="btn btn-danger mr-2"><i class="fa fa-trash mr-1"></i>حذف</button>
                                <a asp-action="Index" class="btn btn-secondary"><i class="ft-x mr-1"></i>الرجوع</a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
